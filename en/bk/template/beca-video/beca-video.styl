section#beca
	.container-fluid
		.row
			.bannerPrincipal.sostenibilidad
				background-image url("../image/banner-creciendo.jpg")
				@media (max-width 425px)
					background-image url("../image/banner-movilStn.jpg")
					background-position 0px -4px
					background-repeat no-repeat
					background-size 107%
					height 300px
	.container
		.programaBeca
			background blanco
			.titulo-prog
				background azul
				color blanco
			.row
				h2
					margin-bottom 0
					display flex
					justify-content center
					align-items center
					margin-top 0
					img
						margin-left 10px
			.row:nth-child(2)
				background blanco
			.contenedorBecaVideo
				margin 20px 30px
				display flex
				@media (max-width 767px)
					flex-direction column-reverse
				@media (max-width 425px)
					margin 0 0 80px
				.box-beca
					width 30%
					background azul
					padding 50px
					display flex
					align-items center
					font-size 20px
					height 380px
					color blanco
					@media (max-width 991px)
						width 45%
						padding 40px
					@media (max-width 767px)
						width 100%
						height 180px
					@media (max-width 425px)
						padding 10px 20px
						height 120px
					p
						@media (max-width 991px)
							line-height 1
							font-size 21px
						@media (max-width 425px)
							font-size 16px
				.videoBeca
					width 70%
					@media (max-width 767px)
						width 100%
						height 380px
			.row.galerias
				.lSAction
				// 	> a
				// 		top 40%
					a.lSPrev
						&:before
							color azul
					a.lSNext
						&:before
							color azul