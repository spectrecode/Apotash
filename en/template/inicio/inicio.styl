@media (min-width: 1200px)
    .container
        width: 1200px
section#banner
    overflow hidden
    // height 525px
    .container-fluid
        .row
            ul
                overflow hidden
                li
                    img.banner-movil
                        display none
                        @media (max-width 424px)
                            display block
                    img.banner-movilGrande
                        @media (max-width 767px) and (min-width 425px) 
                            width 100%
                        @media (max-width 424px)
                            display none
section
    background:grisclaro
    // padding: 25px 0
    h3
        color: #808080
        margin: 15px
        margin-top:0
        position: relative
        font-weight: 600
        font-size: 39px
        font-family: fuente_tituloH3
        @media (max-width 375px)
            font-size: 25px
        &:after
            content: ""
            border-bottom: 1.5px solid grisoscuro
            position: absolute
            right: 0
            // min-width: 85%
            width: 88%
            bottom: 8px
            @media (max-width 1199px)
                width 85%
            @media (max-width 991px)
                width 80%
            @media (max-width 767px)
                width 70%
            @media (max-width 425px)
                width 60%
            @media (max-width 375px)
                width 65%
        @media (max-width 768px)
            margin-right 0
            margin-left 0
section#inicio
    a
        text-decoration none
        &:hover 
            text-decoration none
    ul
        &.sliderNoticias
            li
                border-bottom 5px solid amarilloLimon
                &:hover .caja-hover-not
                    display: block
                    @media (max-width: 1199px)
                        display:none
                .caja-hover-not
                    background: rgba(8, 16, 0, 0.65)
                    position: absolute
                    width: 100%
                    height: 100%
                    top: 0
                    display: none
                    animation: hoverNot .2s
                    animation-fill-mode: both
                    .titular
                        color: blanco
                        font-family: fuente_tituloNoticias
                        height: 100%
                        display: flex
                        font-size: 26px
                        justify-content: center
                        text-shadow: 2.5px 1.5px 1px negro
                        padding: 28% 8%
                        line-height: 1.1
                        @media (max-width: 991px)
                            font-size: 20px
                            line-height 1
                            padding 30px 20px
                    .noticia
                        width: 100%
                        height: 26%
                        background: #fff
                        bottom: 0
                        position: absolute
                        color: #000
                        display: flex
                        padding: 10px
                        align-items center
                        @media (max-width: 991px)
                            height 30%
                        a
                            text-decoration: none
                            color: #616161
                        a:first-child
                            width 80%
                            padding 10px
                            @media (max-width: 991px)
                                padding 0
                        a:last-child
                            border-left: 2px solid #808080
                            width 20%
                            i
                                font-size: 28px
                                @media (max-width: 991px)
                                    font-size: 21px
                            span
                                font-size: 14px
                                display: block
                                font-family: fuente_descripcion
                                @media (max-width: 991px)
                                    line-height: 0.8
                        p
                            margin: 0
                            line-height: 1
                            font-size 17px
                            @media (max-width: 991px)
                                line-height 0.8
                                font-size 15px
                img
                    transition: all .2s
            .scale-img
                transform: scale(1.5)
                transition: all .2s
    .descrip-img-noticias
        width: 100%
        background: blanco
        padding: 15px
        border-bottom: 3px solid gold
        line-height: 0.9
        font-size: 25px
        display: flex
        justify-content: center
        flex-direction: column
        height 150px
        @media (max-width: 425px)
            height 120px
        a
            color negro
            text-decoration none
            &:hover
                color negro
                text-decoration none
        p
            color negro
            @media (max-width: 767px)
                font-size: 15px
                text-align center
            @media (max-width: 424px)
                font-size: 13px
    .noticia-destacada
        @media (max-width: 425px)
            display: block !important
        
    .row
        margin:5% auto
        position relative
    
        .lSAction > .lSPrev
            left -10px
            @media (max-width 767px)
                left 7px
        .lSAction > .lSNext
            right -10px
            @media (max-width 767px)
                right 7px
@keyframes fadeModal
    0%
        opacity: 0
    100%
        opacity: 1
@keyframes hoverNot
    0%
        opacity: 0
    100%
        opacity: 1
        
@keyframes slideLeft
    0% 
        margin-left: 0%
    20% 
        margin-left: 0%
    25% 
        margin-left: -100%
    45% 
        margin-left: -100%
    50% 
        margin-left: -200%
    70% 
        margin-left: -200%
    75% 
        margin-left: -300%
    100% 
        margin-left: -300%