section
    .container-fluid
        .row
            .bannerPrincipal.talentoNos
                background-image url("../image/banner2.jpg")
                @media (max-width 425px)
                    background-image url("../image/banner-movil2.jpg")
                    background-position 0px -4px
                    background-size 107%
                    height 300px
    .talento
        margin-bottom 20%
        @media (max-width 767px)
            box-shadow 0 0 0
            // display none
            margin-bottom 0
            padding-top 50px
            padding-bottom 20px
            background blanco
        .row
            display flex
            align-items center
            margin 20px auto
            flex-direction row-reverse
            @media (max-width 767px)
                box-shadow 0 0 0
                display flex
                flex-direction column
            h2
                font-family fuente_tituloH2Nos
                color verdeOscuro
                font-size 28px
            h2.tituloTalentoMovil
                @media (max-width 767px)
                    background verdeOscuro
                    width 70%
                    display flex
                    align-items center
                    justify-content center
                    height 70px
                    color blanco
                    font-family fuente_tituloH2
                    margin-bottom 50px
                    left -30px
                    position relative
                @media (max-width 425px)
                    width 100%
                    // font-size 25px
            p
                @media (max-width 991px)
                    font-size 16px
            div
                font-size 20px
            > div:nth-child(2)
                padding-left 0
                text-align center
                img
                    @media only screen and (min-width 426px) and (max-width 767px)
                        width 70%
                @media (max-width 991px)
                    padding-left 15px
            > div:first-child
                padding 10px 30px
            img
                width 70%
                @media (max-width 991px)
                    width 100%
                @media (max-width 425px)
                    width 92%