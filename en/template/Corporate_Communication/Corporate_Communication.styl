			// 	font 15px alegreya_sansregular
			// 	color #666666
			.icon-brochure
				@media (max-width 991px)
					text-align center
				@media (max-width 767px)
					display none
				.icon-download3
					color #006C4B
					margin-left 10px
					@media (max-width 1199px)
						margin-left initial
					a
						font 13px alegreya_sansmedium
						color #006C4B
						margin-left 5px
						text-decoration none
				.icon-eye
					color #006C4B
					margin-top 5px
					margin-left 10px
					@media (max-width 1199px)
						margin-top initial
						margin-left initial
					a
						font 13px alegreya_sansmedium
						color #006C4B
						margin-left 5px
						text-decoration none
					p
						font 14px alegreya_sansregular
			.icon-brochureM
				width 100%
				display flex
				position relative
				bottom 1px
				@media (min-width 767px)
					display none
				.icon-download3, .icon-eye
					width 50%
					height 50px
					display flex
					justify-content center
					align-items center
					color blanco
					a
						color blanco
				.icon-download3
					background verdeOscuro
				.icon-eye
					background grisoscuro
		a
			font 16px alegreya_sansmedium
			color #006C4B
			margin-left 5px
			text-decoration none
	.container-prensa
		.brochure:nth-child(3)
			@media (max-width 767px)
				display none
	#noticias
		display none
		margin-top 20px
h3#resultados
	&:after
		width 85% !important
		@media (max-width: 1199px)
