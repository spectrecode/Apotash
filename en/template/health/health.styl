section#salud
	@media (max-width 767px)
		background blanco
	.container-fluid
		.row
			.bannerPrincipal.sostenibilidad
				background-image url("../image/banner-creciendo.jpg")
				@media (max-width 991px)
					background-position 0px -4px
					background-repeat no-repeat
					background-size cover
					height 325px
				@media (max-width 424px)
					background-image url("../image/banner-movilStn.jpg")
					height 403px
				@media (max-width 375px)
					height 370px
				@media (max-width 320px)
					height 315px
	.container
		@media (max-width 767px)
			display flex
			flex-direction column-reverse
		ul.menuSos
			margin-top 50px
			@media (max-width 767px)
				margin-top 0
		ul
			display flex
			justify-content center
			padding 0
			a
				&:hover
					text-decoration none
				li
					cursor pointer
					color grisoscuro
					list-style none
					width 180px
					transition all ease-in-out .2s
					font-size 23px
					height 65px
					display flex
					justify-content center
					align-items center
					line-height 1
					&:hover
						background: verdeOscuro
						color blanco
						font-family fuente_active
						display flex
						align-items center
						justify-content center
						@media (max-width 767px)
							font-family fuente_active
							background blanco
							color grisoscuro
					&.activesos
						background verdeOscuro
						color blanco
						font-family fuente_active
						@media (max-width 767px)
							background blanco
							color grisoscuro
			/.menuSosMovil
				display flex
				flex-direction column
				padding 0
				margin-bottom 0
				a
					text-decoration none
					color grisoscuro
					li
						width 100% !important
						padding 30px
						background blanco
						font-size 23px
						list-style none
						display flex
						justify-content center
						align-items center
						&:hover
							font-family fuente_active
							background blanco
							color grisoscuro
		.salud
			margin-top 50px
			h2
				font-size 25px
				color verdeOscuro
				font-family fuente_tituloH2Nos
				// &:after
				// 	content: initial
				@media (max-width 767px)
					font-size 25px
					color verdeOscuro
					height 50px
		.galerias
			@media (max-width 767px)
				margin 0
			.contenedorSalud
				@media (max-width 767px)
					padding 15px
					margin-bottom 20%
				> div
					display flex
					margin-bottom 20%
					@media (max-width 767px)
						flex-direction column
						margin-bottom 0
				.box-somos
					width 55%
					font-size 20px
					color grisOscuro
					background #fff
					display flex
					align-items center
					padding 0 40px
					flex-direction column
					justify-content center
					left 15px
					position relative
					box-shadow: sombra
					@media (max-width 1199px)
						line-height 1
						padding 0 20px
					@media (max-width 991px)
						padding 0 15px
					@media (max-width 767px)
						width 100%
						left 0px
						box-shadow 0 0 0
					p
						@media (max-width 1199px)
							font-size 18px
						@media (max-width 991px)
							font-size 14px
						@media (max-width 767px)
							font-size 20px
				.lSSlideOuter
					width 45%
					position relative
					box-shadow: sombra
					ul.sliderUno
						display flex
						li
							cursor pointer
					@media (max-width 767px)
						width 100%
						margin auto
						padding 15px
						padding-bottom 0
						box-shadow 0 0 0
					.lSPager.lSpg
						@media (max-width 767px)
							width 95.5%
						@media (max-width 424px)
							width 90%
						