// mapa
section#mapa
	margin:0
	padding:0
	position relative
	height 100%
	.mapaOculto
		display none
	.container-fluid
		.row
			.oficinas
				position absolute
				z-index 1
				a
					padding 10px 50px
					font-size 22px
					display inline-block
					background-color amarilloLimon
					color blanco
					font-family fuente_tituloBanner
					transition background-color ease-in-out 200ms
					&:hover
						background-color amarilloOscuro
						text-decoration none
						transition background-color ease-in-out 200ms
					&.piura
						background-color grisoscuro
						&:hover
							background-color grafito
			.floatDirecc
				position absolute
				top 32%
				bottom 41%
				left 7%
				z-index 2
				display flex
				@media (max-width 991px)
						width 45%
				@media (max-width 767px)
					display none
				img
					width 85%
				.direccion
					color blanco
					width 79%
					height 100%
					display flex
					position absolute
					padding 20px 25px
					@media (max-width 991px)
						padding 15px
					i
						font-size 55px
						display flex
						align-items center
					p
						padding 0px 18px
						font-size 18px
						margin 0
						padding-right 0
						line-height 1
						@media (max-width 991px)
							font-size 16px
#map
	height 500px
	
							
						