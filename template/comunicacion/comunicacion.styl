section#comunicacion
	.container-fluid
		.row
			.bannerPrincipal.sostenibilidad
				background-image url("../image/banner3.jpg")
	.container
		ul
			margin:50px auto
			display flex
			justify-content center
			padding 0
			a
				&:hover
					text-decoration none
				li
					cursor pointer
					color grisoscuro
					list-style none
					width 200px
					padding 10px
					transition all ease-in-out .2s
					font-size 21px
					height 80px
					&:hover
						background: verdeOscuro
						color blanco
						font-family fuente_active
						display flex
						align-items center
						justify-content center
					&.activesos
						background verdeOscuro
						color blanco
						font-family fuente_active
		.subComunic
			border-top 3px solid verdeOscuro
			ul
				a
					li
						height auto
		.boletines
			ul
				display: flex
				justify-content: space-around
				li
					list-style: none
					img
						box-shadow: 0px 17px 18px -11px #636363
					.boletin
						margin 10% 0 12%
						line-height: 1.2
						color: verdeOscuro
						font-family fuente_gruesa
						font-size 20px
					// div
					// 	margin: 15px 30px
					// 	transition:background-color 0.5s, transform .5s
					a 
						text-decoration: none
						color: verdeOscuro
						transition:all 0.5s, transform .5s
						cursor pointer
						&:hover
							padding: 15px
							background: verdeOscuro
							color: blanco
							transition:background-color 0.5s, transform .5s
			&:last-child
				margin-bottom 20%
