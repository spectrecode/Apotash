						font-family fuente_active
			/.submenuFM
				display flex
				flex-direction column
				padding 0
				margin-bottom 0
				a
					&:hover
						text-decoration none
					li
						padding 30px
						width 100%
						background blanco
						color grisoscuro
						font-size 21px
						&:hover
							font-family fuente_active
// slide galerias
.galerias
	margin-bottom 20%
	margin-top 3%
ul
	&.sliderGaleria
		li
			cursor: -webkit-zoom-in
			p
				display none
.modal-img
	width: 100%
	height: 100%
	background: rgba(1, 6, 0, 0.8)
	top: 0
	display: none
	// padding-top: 100px
	z-index: 10 
	position: fixed
	left:0
	animation: fadeModal .3s
	.imageZoom
		height 100%
	.btn-cerrar-img
		position absolute
		color grisoscuro
		right 0
		padding 0px 11px
		font-size 30px
		cursor pointer
		// line-height 1.5
		transition all ease .2s
		text-shadow -0.5px -1.5px 0.5px blanco
		height 45px
		&:hover
			color: blanco
			background: gris
			transition: all ease-out .3s
		&:active
			color grisoscuro
	.content-modal
		display flex
		height 100%
		justify-content center
		align-items center
		.row-modal, .row-normal
			height 70%
			position relative
			i.icon-chevron-left, i.icon-chevron-right
				position absolute
				color grisclaro
				left -35px
				top 0
				bottom 0
				margin auto
				cursor pointer
				height 40px
				font-size 40px
				text-shadow -0.5px -1.5px 0.5px grisoscuro
				transition all ease-out 0.3s
				&:hover
					transition all ease-out 0.3s
					color grisoscuro
		.row-normal
			i.icon-chevron-right
				right -35px
				left initial
		.row-modal:last-child
			background blanco
			width 25%
			padding 30px
			display flex
			align-items center
			justify-content center
			flex-direction column
			i.icon-chevron-right
				right -35px
				left initial
			h3
				color verdeOscuro
				font-family fuente_tituloH2Nos
				font-size 30px
				&:after
					content initial
			span.btn-cerrar-img
				color grisoscuro
				right 0
				top 0
				&:hover
					color blanco
					background grisoscuro
			.imageZoom
				height 70%
