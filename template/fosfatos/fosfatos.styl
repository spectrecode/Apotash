section#fosfatos
	.container-fluid	
		.row
			.fosfato
				background-image url("../image/banner-fosfatos.jpg")
	.container	
		.row
			p
				font-size 21px
				padding 0 60px
				line-height 1
		.row	
			ul.secuenciaFosfatos
				display flex
				padding 0
				li
					list-style none
					font-size 18px
					padding 20px 0
					line-height 1
					
					h3
						font-family fuente_itemsSubmenu
						color verdeOscuro
						font-size 24px
						height 35px
						&:after
							content initial
				i
					height 0
					position relative
					padding 20px
					font-size 35px
					color amarilloLimon
		.row:nth-child(3)
			padding 20px
			background-color blanco
			margin-top 3%
