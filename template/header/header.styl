header.header
    background: #f8f8f8
    font-family: fuente_Menu
    .container
        .logo-max
            display: flex
            justify-content: space-between
            align-items: center
            > a
                @media (max-width: 425px)
                    display: flex
                    align-items: center
                    // justify-content:center
                    width: 100%
                img
                    width: 70%
                    @media (max-width: 425px)
                        width: 60%
            .box-burguer
                display flex
                justify-content space-between
                width 100px
                align-items center
                img
                    cursor pointer
                    @media (max-width: 425px)
                        width 80%
            a.line-burguer
                display block
                height 24px
                width 33px
                cursor pointer
                &:before
                    content: ""
                    position: absolute
                    border-top: 0.875em double verdeOscuro
                    border-bottom: 0.333em solid verdeOscuro
                    width: 2em
                    height: 1.45em
        > .row
            position: relative
            .logo-header
                height: 120px
                display: flex
                align-items: center
                @media (max-width: 768px)
                    width: 70%
                    margin: auto                        
    nav.menu-header
        ul
            height: 120px
            display: flex
            align-items: center
            margin-bottom: 0
            justify-content: space-around
            padding: 0
            li
                list-style: none
                font-size: 20px
                @media (max-width: 1200px)
                    padding: inherit   
                a
                    color: #00A7D8
                    transition: all .2s
                    position: relative
                    font-family fuente_Menu
                    font-size 17px
                    text-decoration: none
                    z-index: 5
                    transition: all .2s
                    &:hover,&.active
                        color: verdeOscuro
                        font-weight normal
                &.subProy
                    a    
                        &:hover span
                            visibility visible
                        span
                            font-size 13px
                            visibility hidden
                    .submenu-header
                        display none
                        list-style none
                        position absolute
                        background verdeOscuro
                        z-index 11
                        height auto
                        li
                            padding 10px 13px
                            background verdeOscuro
                            transition: all .2s
                            &:hover
                                background verde
                                transition: all .2s
                            a
                                color blanco
                                font-size 13px
                    &:hover .submenu-header
                        display block
                &.subNos
                    a    
                        &:hover span
                            visibility visible
                        span
                            font-size 13px
                            visibility hidden
                    .submenu-header
                        display none
                        list-style none
                        position absolute
                        background verdeOscuro
                        z-index 11
                        li
                            padding 7px 13px
                            background verdeOscuro
                            transition: all .2s
                            &:hover
                                background verde
                                transition: all .2s
                            a
                                color blanco
                                font-size 13px
                    &:hover .submenu-header
                        display block
                &.subSost
                    a    
                        &:hover span
                            visibility visible
                        span
                            font-size 13px
                            visibility hidden
                    .submenu-header
                        display none
                        list-style none
                        position absolute
                        background verdeOscuro
                        z-index 11
                        height auto
                        li
                            padding 7px 13px
                            background verdeOscuro
                            transition: all .2s
                            &:hover
                                background verde
                                transition: all .2s
                            a
                                color blanco
                                font-size 13px
                    &:hover .submenu-header
                        display block
    .box-search
        display: flex
        flex-direction column
        height 90px
        justify-content space-around
        div
            display flex
            width 110px
            right 66px
            position relative
            a
                text-decoration: none
                transition: all .2s
                color gris
                &.active
                    font-family fuente_botonContacto
                    transition: all .2s
            span
                padding 0 5px
                color gris
        img
            cursor: pointer
    .row
        .container-fluid
            .row
                nav.menu-collapse
                    ul.menu-collapse
                        left:0
                        z-index: 100
                        position: absolute
                        padding: 0
                        width: 100%
                        display: none
                        transition: display cubic-bezier(0.85, 0.7, 0.43, 1.18) 0.6s, transform 1s
                        a
                            color: white
                            text-decoration: none
                            transition:color ease-in 0.8s, transform 0.5s
                            display block
                            width 100%
                            padding 20px 30px
                            &:hover
                                // color: verdeOscuro
                                transition: color ease-in 0.5s, transform 1s
                                font-weight: 700
                            li
                                list-style: none
                                background: verdeOscuro
                                position: relative
                                display: block
                                border-bottom: 2px solid blanco
                                transform: scale(1)
                                // transition: background-color linear 0.3s, padding-left cubic-bezier(0.98, 0.04, 0.04, 0.95) 0.3s, transform 0.5s
                                transition: all 100ms ease-in
                                &:hover
                                    // transition: background-color linear .3s, padding-left ease-in-out .4s, transform 1s
                                    transition: all .2s ease-in
                                    // padding-left: 50px
                                    background: verde
                                    transform: scale(1.2)
                                    @media (max-width 991px)
                                        transform none
                        li
                            list-style: none
                            background: verdeOscuro
                            position: relative
                            display: block
                            border-bottom: 2px solid blanco
                            transform: scale(1)
                            // transition: background-color linear 0.3s, padding-left cubic-bezier(0.98, 0.04, 0.04, 0.95) 0.3s, transform 0.5s
                            transition: all 100ms ease-in                    
                            &:hover
                                // transition: background-color linear .3s, padding-left ease-in-out .4s, transform 1s
                                transition: all .2s ease-in
                                // padding-left: 50px
                                background: verde
                                transform: scale(1.2)
                                @media (max-width 991px)
                                    transform none
                        ul.idiomas
                            padding 0
                            display flex
                            li
                                width 100%
                                a
                                    background gris
                                a.activeIdioma
                                        background grisoscuro
                    li.sMenuSostenibilidad, .sMenuProy, .sMenuNosotros
                        color blanco
                        .submenu-movil
                            display none
                            padding 0
                            position absolute
                            left 0
                            width 100%
                            z-index 10
                            top 64px
                            li
                                background gris
                                color blanco
                                &:hover
                                    background grisoscuro
                        .subBlock
                            display block
             .style-box-search
                    background:grisclaro
                    width: 100%
                    height: 50px
                    font-size: 20px
                    border: none
                    padding-left: 6.5%
