    .box-search
        display: flex
        flex-direction column
        height 90px
        justify-content space-around
        div
            display flex
            width 110px
            right 66px
            position relative
            a
                text-decoration: none
                transition: all .2s
                color gris
                &:active
                    font-family fuente_botonContacto
                    transition: all .2s
            span
                padding 0 5px
        img
            cursor: pointer
    .row
        .container-fluid
             .style-box-search
                    background:grisclaro
                    height: 100px
                    width: 100%
                    font-size: 45px
                    border: none
                    padding-left: 6.5%
                    transition: top 300ms cubic-bezier(0.17, 0.04, 0.03, 0.94)
                    position: absolute
                    z-index: 10
                    display: none
                    outline none
            