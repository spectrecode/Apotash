section
    .container-fluid
        .row
            .bannerPrincipal.talentoNos
                background-image url("../image/banner2.jpg")
                @media (max-width 425px)
                    background-image url("../image/banner-movil2.jpg")
                    background-position 0px -4px
                    background-size 107%
                    height 440px
    .talento
        margin-bottom 20%
        @media (max-width 425px)
            box-shadow 0 0 0
            display none
            margin-bottom 0
            padding-top 50px
            padding-bottom 20px
            background blanco
        .row
            display flex
            align-items center
            margin 20px auto
            flex-direction row-reverse
            @media (max-width 425px)
                box-shadow 0 0 0
                display flex
                flex-direction column
            h2
                font-family fuente_tituloH2Nos
                color verdeOscuro
                font-size 28px
            h2.tituloTalentoMovil
                @media (max-width 425px)
                    text-align center
                    background verdeOscuro
                    width 80%
                    margin auto
                    display flex
                    align-items center
                    justify-content center
                    height 70px
                    color blanco
                    font-family fuente_tituloH2
                    margin-bottom 50px
            div
                font-size 20px
            > div:nth-child(2)
                padding-left 0
                text-align center
                @media (max-width 425px)
                    padding-left 15px
            > div:first-child
                padding 10px 30px
            img
                width 70%
                @media (max-width 425px)
                    width 92%