// banner
.container-fluid	
	.row
		.bannerPrincipal
			background-size cover
			height 524px
			position relative
#carga
	background verdeOscuro
	position absolute
	z-index 9999
	height 100vh
	top 0
	left 0
	width 100vw
	
.menuActivo
	color verdeOscuro !important
	font-weight bold
	
.letrero-banner
	height: 100%
	width: 45%
	position: absolute
	bottom: 0
	display: flex
	@media (max-width 992px) and (min-width 768px)
		width: 50%
	@media (max-width 767px)
		width: 100%
	> div
		width: 79%
		height: 85px
		position: absolute
		top: 40%
		right: 0
		color: white
		font-size: 37px
		text-shadow: 5px 3px 6px black
		font-family: fuente_titulo
		justify-content: center
		display: flex
		flex-direction: column
		@media (max-width: 1200px)
			font-size: 25px
		@media (max-width: 992px)
			font-size: 24px
		@media (max-width: 767px)
			right: initial
			display: flex
			align-items: center
			width: 100%
			font-size: 35px
		@media (max-width: 589px)
			font-size: 30px
		@media (max-width: 521px)
			font-size: 26px
		@media (max-width: 375px)
			font-size: 18px
		h2
			font-family fuente_tituloBanner
		.rectangle
			background: rgba(0,108,76,0.78)
			font-size: 18px
			border-radius: 0 0 70px
			border-left: 7px solid rgba(255,215,0,0.74);
			padding: 20px
			text-shadow: 0 0 0
			font-family fuente_descripcion
			line-height: 30px
			// transform: translate(50px 0)
			@media (max-width: 1200px)
				font-size: 17px
			@media (max-width: 992px)
				padding: 15px
			@media (max-width: 767px)
				border-radius: 0px
				width: 60%
			@media (max-width: 569px)
				width: 75%
			@media (max-width: 375px)
				font-size: 15px
				text-align: center
				border-left-width: 10px
// fin banner
// proyectos
section#fosfatos,#salmuera
	.row
		ul.submenu
			margin:50px auto
			display flex
			justify-content center
			padding 0
			a
				&:hover
					text-decoration none
				li
					cursor pointer
					color grisoscuro
					list-style none
					width 200px
					height 65px
					display flex
					justify-content center
					align-items center
					transition all ease-in-out .2s
					font-size 23px
					&.active
						background verdeOscuro
						color blanco
						font-family fuente_active
						position relative
					&:hover
						background: verdeOscuro
						color blanco
						font-family fuente_active
			/.submenuFM
				display flex
				flex-direction column
				padding 0
				margin-bottom 0
				a
					&:hover
						text-decoration none
					li
						padding 30px
						width 100%
						background blanco
						color grisoscuro
						font-size 21px
						&:hover
							font-family fuente_active
// slide galerias
