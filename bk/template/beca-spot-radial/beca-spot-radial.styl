section#beca
	.container
		@media (max-width 767px)
			display flex
			flex-direction column-reverse
		.contenBecaSpot
			display flex
			justify-content center
			@media (max-width 641px)
				flex-direction column
			.spot-beca
				&:hover .reseniaAudio
					display block
				.spotAudio
					position relative
					text-align center
					&:hover .iconAudio
						display block
					img:first-child
						width 70%
						@media (max-width 767px)
							width 90%
						@media (max-width 424px)
							width 100%
					.iconAudio
						position absolute
						right 0
						left 0
						margin auto
						top 0
						bottom 0
						display none
						@media (max-width 767px)
							display block
				@media (max-width 641px)
					margin 20px auto
					padding 15px
				.reseniaAudio
					background azul
					padding 25px
					// display none
					width 70%
					margin auto
					color blanco
					font-size 20px
					@media (max-width 767px)
						width 90%
					@media (max-width 424px)
						padding 15px
						width 100%
					p
						margin-top 15px
						@media (max-width 991px)
							line-height 1
						@media (max-width 424px)
							font-size 16px
						@media (max-width 374px)
							font-size 15px
					audio
						width 100%
		.row.galerias
			.lSAction
				// > a
				// 	top 40%
				a.lSPrev
					&:before
						color azul
				a.lSNext
					&:before
						color azul